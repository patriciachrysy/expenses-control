<%= stylesheet_link_tag "application" %>
<%= stylesheet_link_tag "expense" %>

<%= render "layouts/nav_bar", {prev_path: nil, title: 'all expenses', from_form: false, next_path: categories_path, next_text: 'search' } %>

<div class="expenses">
    <% if @expenses.count > 0 %>
        <% @expenses.each do |expense| %>
            <%= render 'expense', {category: expense.categories.first, expense: expense} %>
        <% end %>
    <% else %>
        <small> No expense added .</small>
    <% end %>
</div>
