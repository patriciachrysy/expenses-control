<div class="expense-thumb">
    <div class="image-div">
        <%= image_tag expense.photo.url, id: "imagePreview" if expense.photo.present? %>
        <%= image_tag('wallet.png', id: "imagePreview") unless expense.photo.present? %>
    </div>
    <div class="text-div">
        <h3><%= link_to expense.name, expenses_manager_path(expense) %></h3>
        <p><%= truncate(expense.description, length: 20) %>...</p>
        <p>
            <% expense.categories.each do |cat|  %>
                <%= link_to cat.name, category_path(category), class: 'clear-button tags' %>
            <% end %>
        </p>
        <small><%= expense.created_at.strftime("%B %d, %Y") %></small>
        <div class="actions">
            <%= link_to raw("<i class='las la-pen primary-text'></i>"), edit_category_expenses_manager_path(category, expense), class: 'clear-button icon-button' if can? :update, expense %>
            <%= link_to raw("<i class='las la-trash danger-text'></i>"), expenses_manager_path(expense), data: {
                    turbo_method: :delete,
                    turbo_confirm: 'Are you sure you want to delete this category?'
                }, class: 'clear-button icon-button' if can? :destroy, expense %>
        </div>
    </div>
    <div class="stats-div">
        <span>$<%= expense.amount %></span>
    </div>
</div>