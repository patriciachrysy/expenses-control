<div class="category-thumb">
    <div class="icon-div">
        <%= category.display_icon %>
    </div>
    <div class="text-div">
        <h3><%= link_to category.name, category %></h3>
        <small><%= category.created_at.strftime("%B %d, %Y") %></small>
        <div class="actions">
            <%= link_to raw("<i class='las la-pen primary-text'></i>"), edit_category_path(category), class: 'clear-button icon-button' if can? :update, category %>
            <%= link_to raw("<i class='las la-trash danger-text'></i>"), category_path(category), data: {
                    turbo_method: :delete,
                    turbo_confirm: 'Are you sure you want to delete this category?'
                }, class: 'clear-button icon-button' if can? :destroy, category %>
        </div>
    </div>
    <div class="stats-div">
        <span>$<%= category.expenses.sum {|expense| expense.amount} %></span>
    </div>
</div>