<%= stylesheet_link_tag "application" %>
<%= stylesheet_link_tag "auth_form" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "layouts/nav_bar", {prev_path: root_path, title: 'register', from_form: true, form: f, submit_text: 'next' } %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-content">
    <div class="field photo-upload">
      <div class="photo-view">
        <%= image_tag('default-avatar.png', id: "imagePreview")%>
      </div>

      <label class="custom-file-upload">
          <%= f.file_field :photo, id: "user_photo", accept: 'image/*', onchange: 'previewImage(event)' %>
          upload picture
      </label>
    </div>

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Fullname" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password" %>
    </div>
  </div>
<% end %>
<div class="bottom-links">
  <%= render "devise/shared/links" %>
</div>
